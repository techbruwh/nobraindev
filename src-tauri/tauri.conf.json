{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NoBrainDev",
  "version": "1.3.9",
  "identifier": "com.techbruwh.nobraindev",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/web/icon-192.png",
      "icons/web/icon-512.png",
      "icons/macos/AppIcon.icns",
      "icons/web/favicon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "bundleName": "NoBrainDev"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self' ipc: tauri:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' ipc: tauri: https://*.supabase.co https://srkjunbwdclxymzwvpmt.supabase.co; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; worker-src 'self' blob:;",
      "devCsp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "NoBrainDev",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      },
      {
        "label": "clipboard-popup",
        "url": "clipboard-popup.html",
        "title": "Clipboard History",
        "width": 570,
        "height": 400,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": false,
        "transparent": true
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
